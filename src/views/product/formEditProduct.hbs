<div class="sh-ui-main">
    <div class="wrapper">
        {{> sidebar }}
    </div>
    <div class="sh-ui-container">
        {{> alertsMsg}}
        <!--START CONTENT FORM-->
        <div class="row sh-ui-mt-1">
            <nav class="sh-ui-gradient-45deg-deep-purple-blue">
                <div class="nav-wrapper">
                    <a href="#!" class="brand-logo sh-ui-ml-1"><i class="material-icons">view_list</i>New Product</a>
                </div>
            </nav>
        </div>
        <div class="divider"></div>

        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <form class="col s12" action="/product/update/{{product.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="row">

                                    <div class="input-field col l12">
                                        <input id="name" type="text" class="validate" name="name"
                                            value="{{product.name}}">
                                        <label for="name">Name</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <input id="bran" type="text" class="validate" name="brand"
                                            value="{{product.brand}}">
                                        <label for="bran">Brand</label>
                                    </div>
                                    <div class="input-field col s12">
                                        <select name="category">
                                            {{#each listCategory}}
                                            <option value="{{id}}">{{description}}</option>
                                            {{/each}}
                                        </select>
                                        <label>Category</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <input id="price" type="number" class="validate" name="price"
                                            value="{{product.price}}">
                                        <label for="price">Price</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <input id="size" type="text" class="validate" name="size"
                                            value="{{product.size}}">
                                        <label for="size">Size</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <input id="color" type="text" class="validate" name="color"
                                            value="{{product.color}}">
                                        <label for="color">Color</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <input id="color" type="text" class="validate" name="image"
                                            value="{{product.image}}">
                                        <label for="color">Link image</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <textarea id="description" class="materialize-textarea"
                                            name="description">{{product.description}}</textarea>
                                        <label for="description">Description</label>
                                    </div>

                                    <div class="row">
                                        <div class="sh-ui-card__position-button">
                                            <div class="col s4 offset-s2">
                                                <button
                                                    class="btn waves-effect waves-light sh-ui-gradient-45deg-blue-indigo"
                                                    type="submit" name="action">Save
                                                    <i class="material-icons right">save</i>
                                                </button>
                                            </div>
                                            <div class="col s4 offset-s2">
                                                <a href="/products"
                                                    class="btn waves-effect waves-light sh-ui-gradient-45deg-red-pink"
                                                    type="submit" name="action">Cancel
                                                    <i class="material-icons right">cancel</i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END CONTENT FORM-->
{{> footer }}